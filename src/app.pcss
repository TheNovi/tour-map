@tailwind base;
@tailwind components;
@tailwind utilities;

body {
	@apply bg-gray-800 text-gray-200 select-none;
}

h1 {
	@apply text-4xl text-center; /*my-8*/
}

input,
textarea {
	@apply rounded-md border-gray-900 border-2 bg-gray-700 focus:outline-none;
}

button {
	@apply bg-gray-700 hover:bg-gray-600 py-0.5 px-1 rounded-md;
}

a {
	@apply text-blue-400 underline;
}
